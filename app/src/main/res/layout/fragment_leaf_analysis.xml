<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FragmentLeafAnalysis">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_camera"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="30dp"
        android:background="@drawable/rounded_button_green"
        android:text="Take Your Rice Leaf"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_baseline_camera_alt_24"
        android:drawablePadding="15dp"
        app:drawableTint="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="30dp"
        android:background="@drawable/rounded_button_green"
        android:text="Upload From Your Device"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_baseline_upload_file_24"
        android:drawablePadding="15dp"
        app:drawableTint="@color/white" />

    <ImageView
        android:id="@+id/img_leaf"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:src="@color/light_gray" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_analyze"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:background="@drawable/bottom_navigation_background"
        android:text="Analyze"
        android:textSize="20sp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/dark_green"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="18sp"
        android:textAlignment="center" />
</LinearLayout>